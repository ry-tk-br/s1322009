                <label class="btn btn-default active">
                  <input type="radio" autocomplete="off" checked> 低
                </label>
                <label class="btn btn-default">
                  <input type="radio" autocomplete="off"> 中
                </label>
                <label class="btn btn-default">
                  <input type="radio" autocomplete="off"> 高
                </label>
              </div>
              導入コスト
              <div class="btn-group" data-toggle="buttons">
                <label class="btn btn-default active">
                  <input type="radio" autocomplete="off" checked> 低
                </label>
                <label class="btn btn-default">
                  <input type="radio" autocomplete="off"> 中
                </label>
                <label class="btn btn-default">
                  <input type="radio" autocomplete="off"> 高
                </label>
              </div>
              拡張性
              <div class="btn-group" data-toggle="buttons">
                <label class="btn btn-default active">
                  <input type="radio" autocomplete="off" checked> 低
                </label>
                <label class="btn btn-default">
                  <input type="radio" autocomplete="off"> 中
                </label>
                <label class="btn btn-default">
                  <input type="radio" autocomplete="off"> 高
                </label>
              </div>
              運用性
              <div class="btn-group" data-toggle="buttons">
                <label class="btn btn-default active">
                  <input type="radio" autocomplete="off" checked> 低
                </label>
                <label class="btn btn-default">
                  <input type="radio" autocomplete="off"> 中
                </label>
                <label class="btn btn-default">
                  <input type="radio" autocomplete="off"> 高
                </label>
              </div>
              機能性
              <div class="btn-group" data-toggle="buttons">
                <label class="btn btn-default active">
                  <input type="radio" autocomplete="off" checked> 低
                </label>
                <label class="btn btn-default">
                  <input type="radio" autocomplete="off"> 中
                </label>
                <label class="btn btn-default">
                  <input type="radio" autocomplete="off"> 高
                </label>
              </div>
            </div>
          </div>
        </div>
        <div class="tab-pane" id="sampleContentC">
          <div class="row">
            <div class="col-sm-1">
              <!-- 調整用です -->
            </div>
            <div class="col-sm-10">
              言語<br>
              <div class="btn-group" data-toggle="buttons">
                <label class="btn btn-default">
                  <input type="radio" autocomplete="off"> C
                </label>
                <label class="btn btn-default">
                  <input type="radio" autocomplete="off"> Ruby
                </label>
                <label class="btn btn-default">
                  <input type="radio" autocomplete="off"> Python
                </label>
                <label class="btn btn-default">
                  <input type="radio" autocomplete="off"> Java
                </label>
              </div>
              <br>
              プロトコル<br>
              <div class="btn-group" data-toggle="buttons">
                <label class="btn btn-default">
